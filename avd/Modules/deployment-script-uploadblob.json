    }
  },
  "parameters": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "storageAccountName": {
      "type": "string"
    },
    "storageAccountKey": {
      "type": "string"
    },
    "fileToUpload": {
      "type": "string"
    },
    "storageName": {
      "type": "string"
    },
    "storageKey": {
      "type": "string"
    }
  },
  "variables": {
    "arguments": "[format('-file {0} -storageName {1} -storageKey {2}', parameters('fileToUpload'), parameters('storageName'), parameters('storageKey'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "kind": "AzurePowerShell",
      "properties": {
        "azPowerShellVersion": "PT1H",
        "retentionInterval": "P1D",
        "arguments": "[variables('arguments')]",
        "scriptContent": "      $file = ${Env:file}\r\n      $name = (Get-Item $file).Name\r\n      $uri = \"https://${Env:storageName}.blob.core.windows.net/aibscripts/$($name)${Env:storageKey}\"\r\n      $headers = @{\r\n        'x-ms-blob-type' = 'BlockBlob'\r\n      }\r\n      Invoke-RestMethod -Uri $uri -Method Put -Headers $headers -InFile $file\r\n    ",
        "storageAccountSettings": {
          "storageAccountName": "[parameters('storageAccountName')]",
          "storageAccountKey": "[parameters('storageAccountKey')]"
        }
      }
    }
  ],
  "outputs": {
    "scriptId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Resources/deploymentScripts', parameters('name'))]"
